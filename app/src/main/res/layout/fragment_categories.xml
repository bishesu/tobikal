<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".Fragments.LoginFragment">



    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/imgfeedback"
                android:layout_width="match_parent"
                android:layout_height="900dp"
                android:layout_alignBottom="@+id/btnfeedback"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="-390dp"
                android:layout_marginBottom="-227dp"
                android:src="@drawable/feedback" />



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:errorEnabled="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:id="@+id/text_input_fullname"
                >

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Full Name"
                    android:id="@+id/fullnamefeedback"
                    android:ems="10"
                    android:inputType="text"
                    android:digits="abcdefghijklmnopqrstuvwxyABCDEFGHIJKLMNOPQRSTUVWXYZ "
                    android:textSize="20dp"/>


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:focusableInTouchMode="true"
                android:layout_below="@+id/text_input_fullname"
                app:errorEnabled="true"
                android:id="@+id/text_input_feedemail"
                >

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:id="@+id/emailfeedback"

                    android:ems="10"
                    android:inputType="textEmailAddress"

                    android:textSize="20dp"/>


            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:focusableInTouchMode="true"
                android:layout_below="@+id/text_input_feedemail"
                app:errorEnabled="true"
                android:layout_marginTop="10dp"
                android:id="@+id/text_input_contactfeed"
                >

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contact"
                    android:ems="10"
                   android:inputType="phone"
                    android:id="@+id/contactfeed"

                    android:textSize="20dp"/>


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:focusableInTouchMode="true"
                android:layout_below="@+id/text_input_contactfeed"
                android:id="@+id/text_input_description"
                app:passwordToggleEnabled="true"
                app:errorEnabled="true"
                android:layout_marginTop="10dp"
                >

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Description"
                    android:id="@+id/description"

                    android:ems="10"
                    android:textSize="20dp"/>


            </android.support.design.widget.TextInputLayout>




            <Button
                android:layout_width="200dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:text="SUBMMIT"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="22dp"
                android:textColor="@color/white"
                android:background="@drawable/button_rounded"
                android:layout_below="@+id/text_input_description"
                android:layout_marginTop="25dp"
                android:id="@+id/btnfeedback"
                />

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</FrameLayout>