<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Uploadimage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Image"
        android:textSize="40dp"
        android:id="@+id/tvupload"
        android:textStyle="bold"
        android:textColor="@color/combo1"
        android:textAlignment="center"/>
    <android.support.v7.widget.CardView
        android:layout_width="350dp"
        android:id="@+id/cvupload"
        android:layout_below="@+id/tvupload"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_height="220dp">

        <ImageView
            android:layout_width="288dp"
            android:layout_height="match_parent"
          android:id="@+id/imgviewupload"
            android:src="@drawable/imagee"
            android:layout_marginLeft="30dp" />

    </android.support.v7.widget.CardView>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:focusableInTouchMode="true"
        android:layout_below="@id/cvupload"
        android:id="@+id/text_input_description_uploadimg"
        android:layout_marginTop="10dp"
        app:passwordToggleEnabled="true"
        android:textColorHint="@android:color/black"
        app:errorEnabled="true"
        >

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description "
            android:gravity="center"
            android:textColorHint="@android:color/black"
            android:id="@+id/descriptionuploadet"
            android:ems="10"
            android:inputType="text"
            android:textSize="20dp"/>





    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="UPLOAD"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textSize="22dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@drawable/button_rounded"
        android:layout_below="@+id/text_input_description_uploadimg"
        android:layout_marginTop="25dp"
        android:id="@+id/btnregister"
        />
</RelativeLayout>