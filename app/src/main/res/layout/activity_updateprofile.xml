<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Updateprofile">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Profile"
        android:textSize="40dp"
        android:id="@+id/tvupdateprofile"
        android:textStyle="bold"
        android:textColor="@color/combo1"
        android:textAlignment="center"/>

    <android.support.v7.widget.CardView
        android:layout_width="350dp"
        android:id="@+id/cvupdateprofile"
        android:layout_below="@+id/tvupdateprofile"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_height="220dp">

    <ImageView
        android:layout_width="288dp"
        android:layout_below="@+id/tvupdateprofile"
        android:layout_height="wrap_content"
        android:id="@+id/imgviewupload"

        android:layout_marginLeft="30dp" />
    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Choose a picture"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textSize="12dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@drawable/button_rounded"
        android:layout_below="@+id/cvupdateprofile"
        android:layout_marginTop="25dp"
        android:id="@+id/btnprofilepic"
        />



        <android.support.design.widget.TextInputEditText
            android:layout_marginTop="25dp"
            android:layout_width="400dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:hint="First name"
            android:layout_below="@+id/btnprofilepic"
            android:gravity="center"
            android:textColorHint="@android:color/black"
            android:id="@+id/firstnameupdateptrofile"
            android:ems="10"
            android:inputType="text"
            android:textSize="20dp"/>



        <android.support.design.widget.TextInputEditText
            android:layout_width="400dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/firstnameupdateptrofile"
            android:hint="last name"
            android:gravity="center"
            android:textColorHint="@android:color/black"
            android:id="@+id/lastnameupdateptrofile"
            android:ems="10"
            android:inputType="text"
            android:textSize="20dp"/>

    <android.support.design.widget.TextInputEditText
        android:layout_width="400dp"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lastnameupdateptrofile"
        android:hint="Email"
        android:gravity="center"
        android:textColorHint="@android:color/black"
        android:id="@+id/emailupdateptrofile"
        android:ems="10"
        android:inputType="text"
        android:textSize="20dp"/>


    <Button
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Update Profile"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textSize="22dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@drawable/button_rounded"
        android:layout_below="@+id/emailupdateptrofile"
        android:layout_marginTop="25dp"
        android:id="@+id/btnupdateprofile"
        />


</RelativeLayout>