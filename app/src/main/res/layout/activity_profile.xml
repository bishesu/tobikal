<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">



    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbar"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Profile"
            android:textSize="40dp"
            android:id="@+id/tvupdateprofile"
            android:textStyle="bold"
            android:textColor="@color/combo1"
            android:textAlignment="center"/>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_below="@+id/toolbar"
        android:id="@+id/recv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/imguser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"

                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/loginandroid" />
            

           </RelativeLayout>
        
        <TextView
            android:id="@+id/tvusernameprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imguser"
            android:layout_centerHorizontal="true"
            android:text="username is shown here"
            android:textSize="32dp"/>




    </RelativeLayout>

 <RelativeLayout
     android:layout_below="@+id/recv1"
     android:layout_width="match_parent"
     android:layout_height="match_parent">


     <EditText
         android:layout_width="400dp"
         android:layout_marginLeft="5dp"
         android:layout_height="wrap_content"
         android:hint="first name"
         android:gravity="center"
         android:textColorHint="@android:color/black"
         android:id="@+id/firstnameupdateptrofile"
         android:ems="10"
         android:inputType="text"
         android:textSize="20dp"/>

     <EditText
         android:layout_width="400dp"
         android:layout_marginLeft="5dp"
         android:layout_height="wrap_content"
         android:hint="last name"
         android:gravity="center"
         android:layout_below="@+id/firstnameupdateptrofile"

         android:textColorHint="@android:color/black"
         android:id="@+id/lastnameupdateptrofile"
         android:ems="10"
         android:inputType="text"
         android:textSize="20dp"/>

     <EditText
         android:layout_width="400dp"
         android:layout_marginLeft="5dp"
         android:layout_height="wrap_content"
         android:hint="email"
         android:gravity="center"
         android:layout_below="@+id/lastnameupdateptrofile"

         android:textColorHint="@android:color/black"
         android:id="@+id/emailupdateptrofile"
         android:ems="10"
         android:inputType="text"
         android:textSize="20dp"/>

     <EditText
         android:layout_width="400dp"
         android:layout_marginLeft="5dp"
         android:layout_height="wrap_content"
         android:hint="contact"
         android:gravity="center"
         android:layout_below="@+id/emailupdateptrofile"

         android:textColorHint="@android:color/black"
         android:id="@+id/contactupdateptrofile"
         android:ems="10"
         android:inputType="text"
         android:textSize="20dp"/>

     <Button
         android:id="@+id/btnupdateuserprofile"
         android:layout_width="200dp"
         android:layout_height="wrap_content"
         android:layout_below="@+id/contactupdateptrofile"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="40dp"
         android:background="@drawable/button_rounded"
         android:text="Update"
         android:textColor="@color/white"
         android:textSize="22dp" />

     
     
 </RelativeLayout>

    




</RelativeLayout>